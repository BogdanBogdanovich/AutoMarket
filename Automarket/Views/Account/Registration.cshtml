@{
ViewData["Title"] = "Registration";
}
<div style="padding: 30px;"></div>
<div class="align-content-center">
    <h2>Регистрация</h2>
</div>
<div class="align-content-lg-center">
    <form>
        <div>
            <div>
                <input placeholder="Имя" name="name" type="text" aria-required="true" aria-invalid="false"/>
            </div>
            <div>
                <input placeholder="Фамилия" name="surname" type="text" aria-required="true" aria-invalid="false"/>
            </div>
            <div>
                <input placeholder="Номер телефона" name="phonenumber" type="text" aria-required="true" aria-invalid="false"/>
            </div>
            <div>
                <input placeholder="Почта" name="email" type="text" aria-required="true" aria-invalid="false"/>
            </div>
            <div>
                <input placeholder="Пароль" name="password" type="text" aria-required="true" aria-invalid="false"/>
            </div>
            <div>
                <input placeholder="Повторите пароль" name="repaitpass" type="text" aria-required="true" aria-invalid="false"/>
            </div>
            <div>
                <button type="button">
                    <span>Зарегистрироваться</span>
                </button>
            </div>
        </div>
    </form>
</div>

<style>
    .card {
        background-color: darkolivegreen;
    }
</style>