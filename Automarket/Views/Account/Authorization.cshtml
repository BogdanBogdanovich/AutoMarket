@model Automarket.Domain.Entity.User
@{
    ViewData["Title"] = "Авторизация";
}
<div style="padding: 30px;"></div>
<div align="center">
    <h2>Вход</h2>
</div>
<p/>
<div align="center">
    <form method="post" action="Authorization">
        <div>
            <div>
                <input placeholder="Почта" name="email" type="text" aria-required="true" aria-invalid="false"/>
            </div>
            <p/>
            <div>
                <input placeholder="Пароль" name="password" type="password" aria-required="true" aria-invalid="false"/>
            </div>
            <p/>
            <div>
                <button  class="green" type="submit">
                    <span>Войти</span>
                </button>
            </div>
        </div>
    </form>
</div>

<style>
    .card {
        background-color: darkolivegreen;
    }
</style>